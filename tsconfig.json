{
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true
  },
  "exclude": ["node_modules", "**/__tests__/**/*", "**/dist/**/*"],
  "esModuleInterop": true
}
